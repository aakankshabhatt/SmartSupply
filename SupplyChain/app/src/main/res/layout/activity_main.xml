<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#091C43"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMART SUPPLY"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="42sp"
        android:layout_marginTop="60dp"
        android:id="@+id/result_text"
        android:textColor="@color/white">

    </TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/farmer"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentLeft="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/godown"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/farmerpage"
            android:text="Farmer"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:background="@drawable/main_button"
            android:textSize="20dp"
            tools:ignore="InvalidId"
            />


        <Button
            android:id="@+id/godownpage"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="Godown"
            android:textColor="#000000"
            android:background="@drawable/main_button"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/transport"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentLeft="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/retail"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/transport_page"
            android:text="Transport"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:background="@drawable/main_button"
            android:textSize="18dp"
            tools:ignore="InvalidId" />


        <Button
            android:id="@+id/retailpage"
            android:text="Retailer"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:background="@drawable/main_button"
            android:textSize="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Set-Up"
            android:textColor="#8DC0FC"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="right"
            android:paddingRight="75dp"/>

        <ImageButton
            android:id="@+id/comsetup"
            android:src="@drawable/company"
            android:layout_width="43dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="345dp" />
    </RelativeLayout>

</LinearLayout>